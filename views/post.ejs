<%- include(`partials/header`) %>
    <form action="/poster" method="post">
        <div class="form-group">
            <div class="form-group">
                <label for="Title">Your post Title.</label>

                <input style="width: 25%; line-height: 0.5;" class="form-control" name="title"
                    id="exampleFormControlTextarea1" rows="3" cols="1"></input>
                <label for="Post Message">Your post message.</label>
                <textarea style="width: 50%;" class="form-control" name="postMessage" id="exampleFormControlTextarea1"
                    rows="3" cols="1"></textarea>
            </div>
        </div>
        <br>
        <button class="btn-primary btn-lg" type="submit">Post your message</button>
    </form>
    <%- include(`partials/footer`) %>